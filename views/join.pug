extends layouts/main

block content
    .form-container
        form(action=routes.join, method="post")
            input(type="text", name="name", placeholder="닉네임을 입력하세요..")
            input(type="email", name="email", placeholder="이메일을 입력하세요..")
            input(type="password", name="password", placeholder="패스워드를 입력하세요..")
            input(type="password", name="password2", placeholder="패스워드를 한 번 더 입력하세요..")
            input(type="submit", value="가입하기")
        include ./partials/socialLogin