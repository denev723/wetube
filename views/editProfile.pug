extends layouts/main

block content
    .form-container
        form(action=`/users${routes.editProfile}`, method="post")
            .fileUpload 
                label(for="avatar") 변경할 아바타를 선택하세요
                input(type="file", name="avatar", id="avatar")
            input(type="text", name="name", placeholder="변경할 닉네임을 입력하세요..")
            input(type="email", name="email", placeholder="변경할 이메일 주소를 입력하세요..")
            input(type="submit", value="프로필 변경")
        a.form-container__link(href=`/users${change-password}`)
            button 비밀번호 변경하기