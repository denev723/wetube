extends layouts/main

block content
    .form-container
        form(action=`/users${routes.changePassword}`, method="post")
            input(type="password", name="curPassword", placeholder="현재 비밀번호를 입력하세요..")
            input(type="password", name="newPassword", placeholder="변경할 비밀번호를 입력하세요..")
            input(type="password", name="newPassword2", placeholder="변경할 비밀번호를 한 번 더 입력하세요..")
            input(type="submit", value="변경하기")