extends layouts/main

block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="변경할 제목을 입력하세요..", name="title", value=video.title)
            textarea(name="description", placeholder="변경할 비디오 설명을 입력하세요..")=video.description
            input(type="submit", value="Update Video")
        a.form-container__link.form-container__link--delete(href=`/videos${routes.deleteVideo}`) Delete Video